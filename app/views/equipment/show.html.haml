.jumbotron
  %h1.display-4 
    = @equipment.name
  %p
    Most Recent Expectation:
    = @last_expected.description
    = @last_expected.overall_value


.card.mb-4
  .card-header
    Add Expectation
  .card-body
    = form_for @expectation, :url => expectations_path(:expector_type => "equipment", :expector_id => @equipment.id) do |f|
      .row
        .col-md-4
          = f.text_field :description, class: "form-control", placeholder: "Description..."
        .col-md-4
          = f.number_field :overall_value, class: "form-control", placeholder: "Value (Whole Number)..."
        .col-md-4
          = f.button :submit, class: "btn btn-small btn-success" do
            Save

.card.mb-4
  .card-header
    Equipment Information
  .card-body  
    %p
      %strong Number:
      = @equipment.number
    %p
      %strong Facility:
      = @equipment.facility_id
  .card-footer  
    = link_to 'Edit', edit_equipment_path(@equipment)
    |
    = link_to 'Back', equipment_index_path
