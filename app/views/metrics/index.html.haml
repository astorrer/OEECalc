%p#notice= notice

.jumbotron
  %h1.display-4 Metrics

.card
  .card-header
    = link_to new_metric_path, class: 'btn btn-success' do
      = fa_icon 'plus'
      New Recording
  .card-body
    %table.table
      %thead
        %tr
          %th Equipment Name
          %th Availability
          %th Performance
          %th Quality
          %th OEE
          %th{:colspan => "3"}
      %tbody
        - @metrics.each do |metric|
          %tr
            %td= metric.equipment.name
            %td= metric.availability.to_s + '%'
            %td= metric.performance.to_s + '%'
            %td= metric.quality.to_s + '%'
            %td= metric.oee.to_s + '%'
            %td
              .btn-group
                = link_to metric, class: 'btn btn-primary' do
                  = fa_icon 'eye'
                  View
                = link_to edit_metric_path(metric), class: 'btn btn-primary' do
                  = fa_icon 'pencil'
                  Edit
                = link_to metric, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do
                  = fa_icon 'trash'
                  Delete

  .card-footer
    Metrics Recorder
