.jumbotron
  %h1.display-4 Facilities

.card
  .card-header
    .container-fluid
      .d-flex.flex-row
        .form-inline
          .p-2
            = form_tag facilities_path, :method => "get" do 
              .form-group
                = text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search'
                = submit_tag("Search", :name => nil, :class => 'btn btn-primary')
                  
          .p-2
            = link_to 'New Facility', new_facility_path, class: "btn btn-success"
          
  .card-body
    %table.table
      %thead
        %tr
          %th{:scope => "col"} Name
          %th{:scope => "col"} Address
          %th{:scope => "col"} Secondary address
          %th{:scope => "col"} City
          %th{:scope => "col"} Country
          %th{:scope => "col"} Zip
          %th{:scope => "col"}
      %tbody
        - @facilities.each do |facility|
          %tr
            %td= facility.name
            %td= facility.address
            %td= facility.secondary_address
            %td= facility.city
            %td= facility.country
            %td= facility.zip
            %td
              .btn-group
                = link_to 'View', facility, class: "btn btn-primary"
                = link_to 'Edit', edit_facility_path(facility), class: "btn btn-primary"
                = link_to 'Delete', facility, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
  .card-footer
    Facilites Manager
